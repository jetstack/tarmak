  #  ssl_certificate_id = "${data.aws_acm_certificate.wildcard.arn}"
  #}

  tags {
    Environment = "${var.environment}"
    Project     = "${var.project}"
    Contact     = "${var.contact}"
  }
}

{{ end -}}
