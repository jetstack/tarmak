resource "aws_route53_record" "{{.TFName}}" {
  zone_id = "${var.public_zone_id}"
  name    = "*.${var.name}"
  type    = "A"

  alias {
    name                   = "${aws_elb.{{.TFName}}.dns_name}"
    zone_id                = "${data.aws_elb_hosted_zone_id.main.id}"
    evaluate_target_health = true
  }
}

resource "aws_elb" "{{.TFName}}" {
  name         = "${format("%.20s-ingress", data.template_file.stack_name.rendered)}"
  subnets      = ["${var.public_subnet_ids}"]
  idle_timeout = 600

  security_groups = [
    "${aws_security_group.{{.TFName}}_elb.id}",
  ]

{{ if eq .Name "jenkins" }}
  cross_zone_load_balancing = true

{{ if .AWS.ELBIngressTLS }}
  listener {
    instance_port      = "${var.jenkins_elb_instance_port_http}"
    instance_protocol  = "http"
    lb_port            = 443
    lb_protocol        = "https"
    ssl_certificate_id = "${var.certificate_arn}"
  }
{{ else }}
  listener {
    instance_port      = "${var.jenkins_elb_instance_port_http}"
    instance_protocol  = "http"
    lb_port            = 80
    lb_protocol        = "http"
  }
{{ end }}

  health_check {
    healthy_threshold   = 2
    unhealthy_threshold = 2
    timeout             = 3
    target              = "TCP:${var.jenkins_elb_instance_port_http}"
    interval            = 30
  }

{{ else }}
  listener {
    instance_port     = "${var.ingress_elb_nodeport_http}"
    instance_protocol = "http"
    lb_port           = 80
    lb_protocol       = "http"
  }

  health_check {
    healthy_threshold   = 2
    unhealthy_threshold = 5
    timeout             = 3
    target              = "TCP:${var.ingress_elb_nodeport_http}"
    interval            = 10
  }
{{ end }}

